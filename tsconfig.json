{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "dom"],
    "types": ["jest", "@types/jest"],
  },
  "exclude": ["webpack", "dist", "**/*.spec.*"]
}
